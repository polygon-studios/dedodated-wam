extends layout

block header
  script(src="javascripts/register.js")


block content
  div.admin
    div.login
      h1 SIGN IN
      p Glip glops only
      - if(error)
        div.error #{error}
      div.login-form
        form(action="/login", method="post")
            div.form-group
                input.form-control.limitwidth(type="text", name="username", placeholder="Username")
            div.form-group
                input.form-control.limitwidth(type="password", name="password", placeholder="Password")
            button.btn.btn-default(type="submit") SIGN IN
            button#register.btn.btn-warning(type="button") Register
