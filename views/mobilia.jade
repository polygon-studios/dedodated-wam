extends layout

block header
  link(href='/stylesheets/mobilia/main.css', rel='stylesheet')
  script(type='text/javascript', src='/js/mobilia/three.min.js')
  script(type='text/javascript', src='/js/mobilia/OrbitControls.js')
  script(type='text/javascript', src='https://cdn.socket.io/socket.io-1.3.7.js')
  script(type='text/javascript', src='/js/mobilia/platforms.json')
  script(type='text/javascript', src='https://code.jquery.com/jquery-2.2.0.min.js')
  script(type='text/javascript', src='/js/mobilia/main.js')


block content

  #world

  #traps
      .bramble.trap.selected
        img(src='/img/mobilia/vines.png' height='50px' style='max-width:100px;')
      .button.trap
        img(src='/img/mobilia/button-up.png' height='50px' style='max-width:100px;')
      .pinecone.trap
        img(src='/img/mobilia/pinecone.png' height='50px' style='max-width:100px;')

  .wait
    .info
      p#time-left 20 seconds till next trap!

  .no-game
    .text-container
      h2 Uh-oh!
      h5 Looks like there's no game currently on!
      p Hold tight until one starts again

  .instructions
    h3 How to play
    .text-container
      .row
        img(src='/img/mobilia/trap-place.png' style='max-width:200px;')
      .row
        p Tap on the coloured platform blocks to place a trap!
      .row
        p You can select different traps by clicking on the icons on the bottom
      .row
        img(src='/img/mobilia/trap-select.png' style='max-width:200px;')

    .confirm
      button#hide-instructions
        | Got it!

  .alerts
    .alert.alert-danger
        .container
          b Ooops!
          |  There's already a trap there!
    .alert.alert-warning
        .container
          b Ooops!
          |  Wait out your timer!
    .alert.alert-success
        .container
          b Yay!
          |  Trap has been placed

  script(type='text/javascript', src='/js/mobilia/socketio.js')
